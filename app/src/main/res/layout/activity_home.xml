<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/white">
        </ImageView>

    </LinearLayout>

    // Logo
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/razer"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp">
    </ImageView>

    // Garis atau Line
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="5sp"
        android:background="@color/black">

    </LinearLayout>

    // Text
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELAMAT  DATANG"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp">
    </TextView>

    // Garis atau Line
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/black">
    </LinearLayout>

    // Bagian Atas
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/Konsul_Software"
            android:layout_width="100dp"
            android:layout_height="97dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12dp"
                android:fontFamily="casual"
                android:text="Konsultasi Software"
                android:textColor="@color/white">
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/software"
                android:layout_marginLeft="24dp">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/KonsulHardware"
            android:layout_width="100dp"
            android:layout_height="97dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/black">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Konsultasi Hardware"
                android:fontFamily="casual">
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/software"
                android:layout_marginLeft="24dp">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TokoKita"
            android:layout_width="100dp"
            android:layout_height="97dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Toko Kita"
                android:textColor="@color/white">
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/store"
                android:layout_marginLeft="24dp">
            </ImageView>
        </LinearLayout>
    </LinearLayout> //Akhir Bagian Atas

    // Garis
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="30dp"
        android:background="@color/black">
    </LinearLayout>

    // Garis
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/black">
    </LinearLayout>

    // Bagian Bawah
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/TentangKami"
            android:layout_width="100dp"
            android:layout_height="97dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12dp"
                android:fontFamily="casual"
                android:text="Tentang Kami"
                android:textColor="@color/white">
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/us"
                android:layout_marginLeft="24dp">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Hire"
            android:layout_width="100dp"
            android:layout_height="97dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/black">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Rekrut"
                android:fontFamily="casual">
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/us"
                android:layout_marginLeft="24dp">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PesanSekarang"
            android:layout_width="100dp"
            android:layout_height="97dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/black">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Pesan Sekarang"
                android:fontFamily="casual">
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/order"
                android:layout_marginLeft="24dp">
            </ImageView>
        </LinearLayout>

    </LinearLayout>
    // End Bagian Bawah

</LinearLayout>